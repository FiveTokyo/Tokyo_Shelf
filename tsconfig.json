{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@@@": [".dtpl/index.ts"],

    },
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "esnext"
    }
  },

  "include": [
    "mock/**/*",
    "src/**/*",
    "src/**/*/index.tsx",
    "config/**/*",
    ".umirc.ts",
    "typings.d.ts",
    "cli",
    "preBuild/bin/cli"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
